entities:
  - name: Mesh
    components:
      - name: Transform
        position: [0.0, 0.0, 0.0]
        rotation: [0.0, 0.0, 0.0]
        scale: [1.0, 1.0, 1.0]
      - name: Mesh
        geometry:
          type: ObjAsset
          value: examples/simple/teapot.obj
        diffuse_texture: examples/simple/textures/ferris.png
        shader_path: examples/simple/shaders/basic-mesh.wgsl
      - name: Behavior
        source: examples/simple/src/test.ts
    children: []
  - name: Camera
    components:
      - name: Transform
        position: [0.0, -5.0, -12.0]
        rotation: [0.2, 0.0, 0.0]
        scale: [1.0, 1.0, 1.0]
      - name: Camera
        is_main_camera: true
        type: Perspective
        fov: 70.0
        near: 0.01
        far: 1000.0
    children: []
  - name: UI
    components:
      - name: ScreenUi
        padding: [10px, 10px, 10px, 10px]
        flex:
          direction: Column
          gap: 10px
    children:
      - name: Panel
        components:
          - name: Rect
            width: 100.0%
            height: 100px
            margin: [0px, 0px, 0px, 0px]
          - name: Panel
            color:
              type: Srgba
              value: [0.02, 0.02, 0.02, 1.0]
        children:
          - name: Text
            components:
              - name: Text
                content: this is a text component
                font_size: 24.0
                line_height: 24.0
              - name: Rect
                width: 100.0%
                height: 100.0%
                margin: [10px, 10px, 10px, 10px]
      - name: Panel 2
        components:
          - name: Rect
            width: 300px
            height: 150px
            margin: [0px, 0px, 0px, 0px]
          - name: Panel
            color:
              type: Srgba
              value: [0.8, 0.1, 0.1, 1.0]
          - name: Button
        children:
          - name: Text
            components:
              - name: Text
                content: this is a button
                font_size: 48.0
                line_height: 48.0
                weight: 700
              - name: Rect
                width: 100.0%
                height: 100.0%
                margin: [10px, 10px, 10px, 10px]
